// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  isMonitor Boolean
  isProfessor Boolean
  cadeiras String?
  avaliacaoPendente Boolean @default(false)
  ultimaAulaId String?
  ultimaAulaMonitor String?
  active Boolean @default(false)
  createdAt DateTime @default(now())

  @@map("users")
  monitor Monitor?
  professor Professor?
}

model Professor {
  id String @id @unique
  token String @unique
  monitoresId String[] @default([])
  user User @relation(fields: [id],references: [id])
  @@map("professors")

}

model Monitor {
  id String @id
  tokenProfessor String @unique
  idCadeira String
  nota Float @default(10)
  totalDeAvaliacoes Int @default(0)
  badges String?

  user User @relation(fields: [id],references: [id])

  @@map("monitors")

  monitorias Monitoria?

}

model Monitoria{
  id String @id @default(uuid())
  idMonitor String @unique
  cadeiraName String
  horarioInicio DateTime
  horarioFim DateTime
  alunosCadastrados Int @default(0)
  sala String
  obs String?
  @@map("monitorias")
  monitor Monitor @relation(fields: [idMonitor], references: [id])
  }